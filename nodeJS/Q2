#include <iostream>
#include <string>
#include <limits> 
void clearInputBuffer() {
    std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
}
void checkUppercase() {
    char ch;
    std::cout << "\n--- Check if a Character is Uppercase ---\n";
    std::cout << "Enter a character: ";
    std::cin >> ch;
    if (ch >= 'A' && ch <= 'Z') {
        std::cout << "The character is an uppercase letter.\n";
    }
}