#include <iostream>
#include <string>
#include <limits> 
void clearInputBuffer() {
    std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
}
void compareNumbers() {
    int num1, num2;
    std::cout << "\n--- Compare Two Numbers ---\n";
    std::cout << "Enter the first number: ";
    std::cin >> num1;
    std::cout << "Enter the second number: ";
    std::cin >> num2;
    if (num1 > num2) {
        std::cout << "The larger number is: " << num1 << "\n";
    } else {
        std::cout << "The larger number is: " << num2 << "\n";
    }
}