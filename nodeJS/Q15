#include <iostream>
#include <string>
#include <limits> 
void clearInputBuffer() {
    std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
}
void checkCharType() {
    char ch;
    std::cout << "\n--- Check Character Type ---\n";
    std::cout << "Enter a character: ";
    std::cin >> ch;
    if ((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z')) {
        std::cout << "The character is an alphabet.\n";
    } else if (ch >= '0' && ch <= '9') {
        std::cout << "The character is a digit.\n";
    } else {
        std::cout << "The character is a special character.\n";
    }
}