def check_fuel_type():
    fuels = {
        1: "Petrol",
        2: "Diesel",
        3: "Electric"
    }
    try:
        fuel_choice = int(input("Enter a number (1-3) for fuel type: "))
        print(f"You have chosen: {fuels.get(fuel_choice, 'Invalid choice. Please enter 1, 2, or 3.')}")
    except ValueError:
        print("Invalid input. Please enter an integer.")