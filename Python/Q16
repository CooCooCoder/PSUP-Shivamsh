def get_day_of_week():
    days = {
        1: "Monday",
        2: "Tuesday",
        3: "Wednesday",
        4: "Thursday",
        5: "Friday",
        6: "Saturday",
        7: "Sunday"
    }
    try:
        day_num = int(input("Enter a number (1-7) for the day of the week: "))
        print(f"The day is: {days.get(day_num, 'Invalid input. Please enter a number between 1 and 7.')}")
    except ValueError:
        print("Invalid input. Please enter an integer.")