import java.util.Scanner;
import java.util.InputMismatchException;
class Problem19 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Choose a fuel type (1: Petrol, 2: Diesel, 3: Electric): ");
        int choice = input.nextInt();

        switch (choice) {
            case 1:
                System.out.println("You have chosen Petrol.");
                break;
            case 2:
                System.out.println("You have chosen Diesel.");
                break;
            case 3:
                System.out.println("You have chosen Electric.");
                break;
            default:
                System.out.println("Invalid choice.");
                break;
        }
    }
}